<h1>Login</h1>

<%= form_tag login_path do %>
  <%= text_field_tag :username, nil, placeholder: "username", autofocus: true %>
  <%= password_field_tag :password, nil, placeholder: "password" %>
  <%= submit_tag "Login" %>
<% end %>

<p>Don't have an account? <%= link_to "Sign up here", signup_path %></p>
